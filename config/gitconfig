[alias]
    div = divergence
    l = !pretty_git_log
    r = !git l -30
    st = status
    ci = commit
    co = checkout
    di = diff
    dc = diff --cached
    dm = diff master
    amend = commit --amend
    aa = add --all
    head = !git l -1
    h = !git head
    hp = "!show_git_head"
    ra = !git r --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    b = branch
    unadd = reset HEAD
    merged = branch --merged
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
    s = !git fetch && git status
    ss = local-to-remote-status
    la = !git l --all
[pull]
    rebase = true
[push]
    default = simple
[core]
    editor = vim
[include]
    path = .gitconfig-local
